<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/background_onboarding">

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_savings" />

    <TextView
        android:id="@+id/titleOnboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahorra inteligentemente"
        android:textColor="@color/primary_text"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/descriptionOnboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoinFin te ayuda a identificar gastos invisibles y mejorar tu salud financiera"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:gravity="center" />
</LinearLayout>
